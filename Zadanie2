print("Program do liczenia sredniej harmonicznej.")
i = 0
suma = 0
n = int(input("Podaj liczbe:"))
while n == 0:
    print("Ciag nie moze zaczynac sie od 0!")
    n = int(input("Podaj liczbe:"))
while n>0:
    i = i+1
    suma = suma + 1/n
    n = int(input("Podaj liczbe:"))

srednia = float(i*(suma**(-1)))
print(srednia)
